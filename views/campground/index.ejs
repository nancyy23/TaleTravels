<% layout('layouts/boilerplate') %> 
<div id="cluster-map" ></div>
    <h1>All Campground</h1>
    <!-- <a href="/campground/new">Add New</a> -->
    
        <% for(let camp of campground){%>
            <div class="card mb-3" >
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.image.length){%> 
                            <img class="img-fluid" src="<%= camp.image[0].url %> " alt="">
                         <% }else{ %> 
                            <img class="img-fluid" src="https://images.unsplash.com/photo-1508313157893-34fe6176c189?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mjl8fGJlYWNofGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="">
                        <% }  %> 
                        
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %> </h5>
                            <p class="card-text"><%= camp.description %> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %> </small>
                            </p>
                            <a href="/campground/<%= camp._id %> " class="btn btn-primary">View <%= camp.title %> </a>
                        </div>
                    </div>
                </div>
                
            </div>
        <%} %> 
    </div>
        <script>
            const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
            const campground = {features: <%- JSON.stringify(campground) %>};
          </script>
        <script src="/javascripts/indexPageMap.js"></script>
    
 
